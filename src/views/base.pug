doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            h1=pageTitle
        
            nav
                ul
                    li
                        a(href="/") Home
                    if !loggedIn
                        li
                            a(href="/join") Join
                        li
                            a(href="/login") Login
                    else
                        li 
                            a(href="/users/logout") Logout
        main
            block content
    include partials/footer.pug